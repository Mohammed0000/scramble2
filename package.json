{
  "name":"scramble",
  "version":"0.2.0",
  "description":"Scramble.io PGP Client",
  "repository":"https://github.com/dcposch/scramble",
  "main":"main.js",
  "dependencies": {
    "react": "*",
    "react-bootstrap": "*",
    "bootstrap": "*",
    "node-keybase": "*",
    "scramble-mail-repo": "*",
    "scramble-imap": "*",
    "object-assign": "*",
    "mkdirp": "*",
    "deep-equal": "*",
    "concat-stream": "*"
  },
  "devDependencies": {
    "react-tools": "*",
    "standard": "*",
    "atom-watcher": "*"
  }, 
  "scripts": {
    "postinstall": "npm run copy && jsx --extension jsx --harmony views/ build/views",
    "copy": "mkdir -p build/ && cp -ru css/ img/ stores/ actions/ apis/ index.html app.js node_modules/bootstrap/dist/* build/",
    "test": "standard *.js stores/* actions/* views/* apis/*"
  }
}
